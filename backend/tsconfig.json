{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "rootDir": "./src",
    "outDir": "./dist",

    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,

    "moduleResolution": "node",
    "lib": ["ES2020"],
    "types": ["node"]
  },
  "include": ["src" , "env.d.ts"],
  "exclude": ["node_modules"]
}
